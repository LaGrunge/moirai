# Moirai Dashboard Configuration
# Copy this file to .env and fill in your values

# Server settings
PORT=8080
DEBUG=false

# =============================================================================
# CI Server Configuration
# =============================================================================
# Option 1: Single server
CI_SERVER_NAME=My CI
CI_SERVER_URL=https://ci.example.com
CI_SERVER_TOKEN=your-api-token-here
CI_SERVER_TYPE=woodpecker  # or 'drone', leave empty for auto-detect

# Option 2: Multiple servers (uncomment and configure as needed)
# CI_SERVER_1_NAME=Production CI
# CI_SERVER_1_URL=https://ci-prod.example.com
# CI_SERVER_1_TOKEN=token-1
# CI_SERVER_1_TYPE=woodpecker

# CI_SERVER_2_NAME=Staging CI
# CI_SERVER_2_URL=https://ci-staging.example.com
# CI_SERVER_2_TOKEN=token-2
# CI_SERVER_2_TYPE=drone

# CI_SERVER_3_NAME=Dev CI
# CI_SERVER_3_URL=https://ci-dev.example.com
# CI_SERVER_3_TOKEN=token-3
# CI_SERVER_3_TYPE=

